# etc/mutt/formats - formatting style of mutt's display and output.
#


# http://www.mutt.org/doc/manual/manual-6.html#folder_format
set folder_format="%3C %t %2N %5n %-8.8u %-8.8g %8s %f"

# http://www.mutt.org/doc/manual/manual-6.html#forward_format
set forward_format="Fwd: %s"

# http://www.mutt.org/doc/manual/manual-6.html#index_format
set index_format="%4C %Z %{%b %d} %-15.15F (%4l) %s"
